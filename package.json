{
  "name": "weather-app",
  "version": "1.0.0",
  "description": "Weather app with OpenWeather API, Express backend and Webpack + TypeScript frontend",
  "main": "server.ts",
  "scripts": {
    "dev:server": "ts-node-dev --respawn --transpile-only src/server/server.ts",
    "dev:client": "webpack serve --config webpack.config.js --mode development",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "build": "webpack --config webpack.config.js --mode production",
    "start": "node dist/server.js",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/node": "^20.5.9",
    "@types/node-fetch": "^2.6.13",
    "concurrently": "^8.2.1",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^6.11.0",
    "gh-pages": "^6.3.0",
    "html-webpack-plugin": "^5.6.4",
    "style-loader": "^3.3.4",
    "ts-loader": "^9.5.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2",
    "webpack": "^5.101.3",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.2"
  }
}
