{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "dist/server",
    "rootDir": "src/server",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/server/**/*.ts",
    "src/shared/**/*.ts"
  ],
  "exclude": [
    "src/app.ts",
    "src/domUtils.ts",
    "src/render.ts",
    "src/storage.ts"
  ]
}